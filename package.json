{
  "name": "quest-board",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "unit-test": "jest --passWithNoTests",
    "unit-test:watch": "jest --passWithNoTests --watch",
